  <h1> <%= current_user.first %>'s BackPack</h1>
  
  <%= form_tag(user_assignments_path, method: 'get') do %>
  <%= text_field_tag :term, nil,  id: "Search", placeholder: "enter search term" %>
  <%= submit_tag "Search"%>
<% end %>

   <% current_user.assignments.each do |assignment| %>
       <h3>Subject: <%= assignment.course.name %></h3> 
       <li>Assignment Name: <%= assignment.name %></li> 
       <li>Due Date: <%= assignment.due.strftime("%m/%d/%Y") %></li>
       <li>Completed?: <%= assignment.completed %></li> 
       <li>Comments/Concerns: <%= assignment.comment %></li> 
       <%= link_to 'Edit Assignment', edit_user_assignment_path(current_user, assignment) %>
        <hr>
     <% end %>
 
      